@model IEnumerable<Pathfinder.Models.AttackGroup>

@{
    ViewBag.Title = "Attacks";
}

<h2>Attacks</h2>

<table class="section noclick full">
    <thead onclick="ToggleRowsVisible('tblAttacks')">
        <tr>
            <td colspan="2">Name</td>
        </tr>
    </thead>
    @foreach (var item in Model)
    {
        <tr class="attack_roll">
            <td>@item.Name</td>
            <td width="50">@Html.ActionLink("View", "View", new { Id = item.AttackGroupId })</td>
        </tr>
    }
</table>
@Html.ActionLink("+ [New Attack]", "CreateAttackGroup", new { Id = Session["CharacterId"] })

