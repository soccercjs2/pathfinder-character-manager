@model Pathfinder.Models.SubAttack

@{
    ViewBag.Title = "Create Sub Attack";
}

<h2>Create Sub Attack</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        
        @Html.HiddenFor(m => m.AttackId)

        <div class="form-group">
            @Html.LabelFor(model => model.EquationId, "Equation", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.EquationId, (SelectList)ViewBag.Equations, new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EquationId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "SubAttack", new { Id = Model.AttackId })
</div>
