@model Pathfinder.ViewModels.AttackGroupView

@{
    ViewBag.Title = "Attack";
}

<h2>@Model.Name</h2>

<div class="row">
    <div class="col-xs-12">
        <table class="section full">
            <thead>
                <tr>
                    <td>Weapon</td>
                    <td>Bonus</td>
                    <td>Damage</td>
                    <td>Critical</td>
                </tr>
            </thead>
            @foreach (var item in Model.AttackViews)
            {
                <tr>
                    <td>@item.Weapon</td>
                    <td>@item.AttackBonus</td>
                    <td>@item.Damage</td>
                    <td>@item.Critical</td>
                </tr>
            }
        </table>
        @Html.ActionLink("+ [New Attack]", "CreateAttack", new { Id = Model.AttackGroupId })
    </div>
</div>

