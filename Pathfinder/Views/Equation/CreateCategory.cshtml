@model Pathfinder.Models.EquationCategory

@{
    ViewBag.Title = "Create Category";
}

<h2>Create Category</h2>

@using (Html.BeginForm()) 
{
    <strong>Name:</strong><br />
    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })<br /><br />

    @Html.HiddenFor(model => model.CharacterId)

    <input type="submit" value="Create" class="btn btn-default" /><br /><br />
}

<div>
    @Html.ActionLink("Back to List", "Index", new { Id = Model.CharacterId })
</div>
