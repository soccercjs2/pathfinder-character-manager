@model Pathfinder.Models.Counter

@{
    ViewBag.Title = "Update Counter";
}

<h2>Update Counter</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        @Html.ValidationSummary(true)
        @Html.HiddenFor(m => m.CounterId)
        @Html.HiddenFor(m => m.CharacterId)
        @Html.HiddenFor(m => m.Name)
        @Html.HiddenFor(m => m.MaxValueEquationId)

        <div class="form-group">
            @Html.LabelFor(model => model.Count, new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.EditorFor(model => model.Count, new { htmlAttributes = new { @class = "form-control", @id = "txtCount" } })
                @Html.ValidationMessageFor(model => model.Count, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-2"></div>
            <div class="col-md-10">
                <input type="button" id="btnDecrement" value="-1" class="btn btn-danger" />
                <input type="button" id="btnIncrement" value="+1" class="btn btn-success" />
                <input type="button" id="btnMax" value="Max" class="btn btn-primary" />
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>
